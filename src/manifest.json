{
    "manifest_version": 2,
    "name": "ECHO Caves (Alpha)",
    "version": "0.80.0",
    "description": "Dark theme and custom theme loader for Buzz ECHO.",
    "icons": {"128": "images/icon128.png","48": "images/icon48.png"},
    "browser_action": {"default_popup": "popup/popup.html"},
    "permissions": ["storage"],
    "web_accessible_resources": ["ConvertedPageTheme.css"],
    "content_scripts": [{"run_at" : "document_idle","matches": ["https://*.echo-ntn.org/*"],"js": ["loadThemeData.js"]}]
}